<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.authentication.AuthFragment">


    <ImageView
        android:id="@+id/ivAuth"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_auth" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.6"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ivAuth"
        />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.05"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/custom_tab_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tabTextColor="@color/white"
        app:tabGravity="fill"
        app:tabIndicatorGravity="stretch"
        app:tabIndicatorColor="#008542"
        app:tabMode="fixed"/>




</androidx.constraintlayout.widget.ConstraintLayout>